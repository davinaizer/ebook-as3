<?xml version="1.0" encoding="UTF-8"?>
<data>
	<content type="text">

	</content>
	
	<content type="tooltip"
			 hook="true"
			 hookSize="20"
			 autoSize="false"
			 followCursor="false"
			 cornerRadius="10"
			 showDelay="0"
			 hideDelay="0"
			 bgAlpha="1"
			 width="350"
			 colors="0x353535,0x353535"
			 padding="10"
			 clickToOpen="true">
		<content>
			<title>
				<![CDATA[<p class="white"><b>EXEMPLO DE TOOLTIP<br></b></p>]]>
			</title>
			<body>
				<![CDATA[<p class="tipText">Nam elementum congue turpis. Praesent eu nunc pellentesque, facilisis nisi non, vestibulum arcu. Nunc non erat est. Maecenas eu lobortis mi. Duis quis ipsum leo. Sed tincidunt pellentesque libero ut pharetra. Ut semper commodo vehicula.</p>]]>
			</body>
		</content>
	</content>

	<tween>
		<tween type="to"
			   target="tooltip_0.bg"
			   duration="1"
			   stagger="0.2"
			   ease="Linear.easeNone">
			<vars>
				<tint>0xF23636</tint>
				<tintAmount>0.8</tintAmount>
				<yoyo>true</yoyo>
				<repeat>-1</repeat>
			</vars>
		</tween>
		
		<tween type="from"
			   target="img0"
			   duration="1"
			   ease="Strong.easeOut"
			   stagger="0.1">
			<vars>
				<delay>0.2</delay>
				<align>
					<align>B</align>
					<mode>OUTSIDE</mode>
				</align>
			</vars>
		</tween>

		<tween type="from"
			   target="img1"
			   duration="1"
			   ease="Strong.easeOut"
			   stagger="0.1">
			<vars>
				<delay>0.8</delay>
				<alpha>0</alpha>
				<transformAroundCenter>
					<scale>0.8</scale>
				</transformAroundCenter>
			</vars>
		</tween>
	</tween>
</data>
